---
import type { Experience } from '../types'

interface Props extends Experience {}

const { title, company, date, summary } = Astro.props

---
<div>
    <style>
        .points {
            color: red
        }
    </style>
    <h1>{title}</h1>
    <h3>{company}</h3>
    <h6>{date}</h6>
    <p>{summary}</p>
    <div class="points">
    <slot />
    </div>
</div>

